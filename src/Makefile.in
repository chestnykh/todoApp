CC = gcc
CFLAGS = @CFLAGS@
LDFLAGS = @LDFLAGS@


srcdir = @abs_srcdir@
bindir = @bindir@
builddir=@bindir@/build

OBJECTS = $(builddir)/graphics.o \
	  $(builddir)/globals.o \
	  $(builddir)/prio.o \
	  $(builddir)/calendars.o \
	  $(builddir)/todo.o

APP	= $(bindir)/todoApp

.PHONY: clean app


app: $(OBJECTS)
	$(CC) $(OBJECTS) $(LDFLAGS) -o $(APP)


$(builddir)/todo.o: $(srcdir)/todo.c $(srcdir)/todo.h $(srcdir)/prio.h $(srcdir)/day.h $(srcdir)/calendars.h
	$(CC) $(CFLAGS) $< -c -o $@
$(builddir)/graphics.o: $(srcdir)/graphics.c $(srcdir)/todo.h $(srcdir)/day.h
	$(CC) $(CFLAGS) $< -c -o $@
$(builddir)/globals.o: $(srcdir)/globals.c $(srcdir)/day.h
	$(CC) $(CFLAGS) $< -c -o $@
$(builddir)/prio.o: $(srcdir)/prio.c $(srcdir)/todo.h $(srcdir)/day.h
	$(CC) $(cflags) $< -c -o $@
$(builddir)/calendars.o: $(srcdir)/calendars.c $(srcdir)/calendars.h
	$(CC) $(cflags) $< -c -o $@

	

clean:
	rm -rf $(OBJECTS) $(APP)
